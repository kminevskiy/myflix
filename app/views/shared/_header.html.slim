section#top-header.row
  h1.col-md-2
    = link_to "MyFLiX", home_path
  - if logged_in?
    ul.col-md-4.clearfix
      li= link_to "Videos", videos_path
      li= link_to "My Queue", my_queue_path(user_id: current_user.id)
      li= link_to "People", people_path
    = render "shared/search_form"
  user_links.pull-right
    ul
      li.dropdown
        - if logged_in?
          = link_to current_user.full_name, logout_path, method: :delete
        - else
          = link_to "Log in", login_path
